{
  "name": "dmr",
  "version": "1.0.0",
  "main": "electron/main.js",
  "license": "MIT",
  "scripts": {
    "dev":    "cross-env RUN_ENV=development webpack && electron electron\\main.js",
    "dev:ts": "cross-env NODE_ENV=dev webpack -c webpack.config.ts && electron .",
    "build": "cross-env RUN_ENV=production webpack --progress --colors && electron ."
  },
  "devDependencies": {
    "asar": "^3.0.3",
    "html-webpack-plugin": "^4.3.0",
    "@types/copy-webpack-plugin": "^10.1.0",
    "@types/fork-ts-checker-webpack-plugin": "^0.4.5",
    "@types/webpack-node-externals": "^2.5.3",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "electron": "^19.0.7",
    "electron-builder": "^23.1.0",
    "fork-ts-checker-webpack-plugin": "^7.2.11",
    "thread-loader": "^3.0.4",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "webpack-node-externals": "^3.0.0"
  },
  "build": {
    "productName": "Orc Helper",
    "copyright": "Copyright (C) 2020 Luhaoz",
    "appId": "ORC_HELPER",
    "files": [
      "electron/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis"
        }
      ]
    },
    "nsis": {
      "shortcutName": "欧克很忙",
      "oneClick": false,
      "perMachine": true,
      "packElevateHelper": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "icon": "build/icons"
    }
  },
  "dependencies": {
    "bootstrap": "^4.5.2",
    "electron-root-path": "^1.0.16",
    "lodash": "^4.17.20",
    "lowdb": "^1.0.0",
    "selenium-webdriver": "^4.0.0-alpha.7"
  },
  "repository": "https://github.com/luhaoz/TaimaninOrcHelper",
  "author": "luhaoz <luhaoz24@hotmail.com>"
}
